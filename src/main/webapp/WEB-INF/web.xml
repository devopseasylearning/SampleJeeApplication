<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app version="3.0">
    <display-name>A web application to practice JEE.</display-name>
    <welcome-file-list>
    <welcome-file>/WEB-INF/views/HomePage.jsp</welcome-file>
    </welcome-file-list>
    <!--Resource reference defined in the content.xml for connection pooling-->
    <resource-ref>
        <description>DB connection pool</description>
        <res-ref-name>jdbc/todoapp</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
